    <body>
        <div class="container">
          <div class="login-container">
            <div id="output"></div>
            <div id="avatar" class="avatar"><img></img></div>
            <label>
                <span class="btn btn-primary">
                    Choose img file
                    <input id="imgFile" type="file" name="imgFile" style="display:none;">
                </span>
            </label>

            <div class="form-box">
                <form action="/login" method="post">
                    <% var errorMsg;%>
